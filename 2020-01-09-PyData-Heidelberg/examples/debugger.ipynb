   "source": [
    "from ipywidgets import Dropdown, Label, HBox\n",
    "\n",
    "dropdown = Dropdown(options=[1, 2, 3])\n",
    "label = Label()\n",
    "\n",
    "\n",
    "def on_change(change):\n",
    "    print(change)\n",
    "#     label.value = 'Value: ' + ?\n",
    "\n",
    "dropdown.observe(on_change, names='value')\n",
    "\n",
    "HBox([dropdown, label])"
   ]
  }
